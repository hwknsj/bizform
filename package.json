{
  "name": "wizform-frontend",
  "version": "0.9.1",
  "private": true,
  "author": "jo√©l hawkins torres <joel@joel.fm> (https://joel.fm)",
  "description": "A demo front-end application for WizForm (https://www.wizform.com).",
  "repository": {
    "type": "git",
    "url": "https://github.com/hwknsj/wizform-frontend"
  },
  "homepage": "https://bizform.vercel.app",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "run-s format:sort-imports format:prettier",
    "format:prettier": "prettier --loglevel warn --single-quote --write './**/*.{js,jsx,ts,tsx,json,scss,css}'",
    "format:sort-imports": "import-sort --write './**/*.{js,jsx,ts,tsx}'",
    "lint": "eslint --max-warnings 0 'src/**/*.{js,jsx,ts,tsx}'"
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-styled-components": "^1.12.0",
    "next": "^10.0.6",
    "normalize.css": "^8.0.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-modal": "^3.12.1",
    "react-transition-group": "^4.4.1",
    "sass": "^1.32.6",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@types/node": "^14.14.25",
    "@types/react": "^17.0.1",
    "@types/styled-components": "^5.1.7",
    "babel-eslint": "^10.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.19.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "browserslist": "> 0.25%, not dead",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "trailingComma": "none",
    "jsxSingleQuote": true,
    "useTabs": false,
    "tabWidth": 2
  },
  "babel": {
    "env": {
      "development": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          "next/babel"
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true
            }
          ]
        ]
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --no-semi --singlequote --write"
  }
}
